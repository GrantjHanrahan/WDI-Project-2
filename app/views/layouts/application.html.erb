<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <% if @current_user.present? %>
         <%= link_to ' Home ', "/games" %>   |
         <%= link_to ' Logout', login_path, method: :delete %>
      <% else %>
        <%= link_to ' Login ', login_path %>
      <% end %>
    </nav>


    <%= yield %>
  </body>
</html>
